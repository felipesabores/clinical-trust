generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id            String        @id @default(uuid())
  name          String
  document      String        @unique
  slug          String?       @unique // For custom URLs
  logo_url      String?
  description   String?       @default("Pet Boutique")
  primary_color String?       @default("#7c3aed")
  whatsapp      String?
  created_at    DateTime      @default(now())
  customers     Customer[]
  cameras       Camera[]
  appointments  Appointment[]
  staff         Staff[]
  transactions  Transaction[]
  products      Product[]
}

model Customer {
  id         String   @id @default(uuid())
  tenant_id  String
  tenant     Tenant   @relation(fields: [tenant_id], references: [id])
  name       String
  phone      String   // WhatsApp format
  avatar_url String?
  created_at DateTime @default(now())
  pets       Pet[]
}

model Pet {
  id           String        @id @default(uuid())
  customer_id  String
  customer     Customer      @relation(fields: [customer_id], references: [id])
  name         String
  type         String        @default("DOG") // DOG, CAT, RABBIT, etc.
  breed        String?
  avatar_url   String?
  notes        String?
  created_at   DateTime      @default(now())
  appointments Appointment[]
}

model Camera {
  id           String        @id @default(uuid())
  tenant_id    String
  tenant       Tenant        @relation(fields: [tenant_id], references: [id])
  name         String
  rtsp_url     String
  is_active    Boolean       @default(true)
  appointments Appointment[]
}

enum AppointmentStatus {
  SCHEDULED
  RECEPTION
  BATHING
  GROOMING
  DRYING
  READY
}

model Appointment {
  id                String            @id @default(uuid())
  tenant_id         String
  tenant            Tenant            @relation(fields: [tenant_id], references: [id])
  pet_id            String
  pet               Pet               @relation(fields: [pet_id], references: [id])
  camera_id         String?
  camera            Camera?           @relation(fields: [camera_id], references: [id])
  status            AppointmentStatus @default(SCHEDULED)
  scheduled_at      DateTime
  access_token      String?           @unique // UUID for magic link
  token_expires_at DateTime?
  created_at        DateTime          @default(now())
}

model Staff {
  id          String   @id @default(uuid())
  tenant_id   String
  tenant      Tenant   @relation(fields: [tenant_id], references: [id])
  name        String
  role        String   // VETERINARIAN, GROOMER, RECEPTIONIST, ADMIN
  phone       String?
  email       String?
  avatar_url  String?
  commission  Float?   @default(0)
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())
}

enum TransactionType {
  INCOME
  EXPENSE
}

model Transaction {
  id          String         @id @default(uuid())
  tenant_id   String
  tenant      Tenant         @relation(fields: [tenant_id], references: [id])
  type        TransactionType
  category    String         // SERVICE, PRODUCT, RENT, SALARY, TAX, etc.
  description String
  amount      Float
  date        DateTime       @default(now())
  created_at  DateTime       @default(now())
}

model Product {
  id          String   @id @default(uuid())
  tenant_id   String
  tenant      Tenant   @relation(fields: [tenant_id], references: [id])
  name        String
  category    String
  stock       Float    @default(0)
  min_stock   Float    @default(0)
  unit        String   // UN, L, KG, etc.
  price       Float
  sku         String?
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@index([tenant_id])
}
